extends base

block content 
  form(method="POST")
    input(placeholder="Username", name="username", type="text", required, trim=true)
    input(placeholder="password", name="password", type="password", required, trim=true)
    input(type="submit", value="Log In")  
  hr
  div
    span Don't have an account yet? 
    a(href="/join") Create account