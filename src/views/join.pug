        input(name="email", type="text", required, trim="true")
        input(name="username", type="text", required, trim="true")
        input(name="password", type="password", required, trim="true")
        input(name="name", type="text", required, trim="true")
        input(name="location", type="text", required, trim="true")
        input(type="submit", value="Join")